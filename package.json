{
  "name": "electron-starter-kit",
  "version": "1.0.0",
  "description": "electron boilerplate using webpack and react",
  "main": "main.js",
  "author": "Bruno Carvalho de Araujo <brunocarvalhodearaujo@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/brunocarvalhodearaujo",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "electron-rebuild",
    "pack": "webpack --env=prod --progress --profile",
    "rebuild-deps": "electron-builder install-app-deps",
    "build": "npm run pack && npm run rebuild-deps && electron-builder",
    "electron": "electron .",
    "run:pack": "npm run pack -- --watch",
    "run:electron": "sleep 5 && electron .",
    "start": "NODE_ENV=development npm-run-all --parallel run:*"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.5",
    "babel-plugin-transform-inline-imports-commonjs": "^1.2.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "copy-webpack-plugin": "^4.5.1",
    "css-loader": "^0.28.11",
    "electron": "1.7.6",
    "electron-builder": "^20.15.1",
    "electron-rebuild": "^1.7.3",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "npm-run-all": "^4.1.3",
    "style-loader": "^0.21.0",
    "url-loader": "^1.0.1",
    "webpack": "^3.x"
  },
  "dependencies": {
    "react": "^16.4.0",
    "react-dom": "^16.4.0"
  },
  "build": {
    "appId": "com.brunocarvalho.startkit",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "main.js",
      "package.json"
    ],
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "category": "Utility",
      "target": [
        "deb"
      ]
    },
    "win": {
      "target": "squirrel",
      "icon": "build/icon.ico"
    }
  }
}
